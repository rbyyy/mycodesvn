<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:gravity="center_vertical"
    android:padding="10dp" >

	<RelativeLayout
	    android:id="@+id/oneRelativeLayout" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp">
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	        <TextView 
	            android:id="@+id/shopNameTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="船越巫山烤鱼" />
	        
	        <TextView 
	            android:id="@+id/shopAddressTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	       <TextView 
	            android:id="@+id/shopPhoneTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	    </LinearLayout>
	    
		<ImageView
		    android:contentDescription="@null" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:background="@drawable/shop_image"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"/>
	    
	</RelativeLayout>
	
	<ImageView 
	    android:layout_below="@id/oneRelativeLayout"
	    android:contentDescription="@null"
	    android:id="@+id/twoImageView"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/Grey"/>
	
	<RelativeLayout
	    android:layout_marginTop="10dp" 
	    android:layout_below="@id/twoImageView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	        <TextView 
	            android:id="@+id/buyNameTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="船越巫山烤鱼" />
	        
	        <TextView 
	            android:id="@+id/buyAddressTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	       <TextView 
	            android:id="@+id/buyPhoneTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	    </LinearLayout>
	    
		<ImageView
		    android:contentDescription="@null" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:background="@drawable/buy_image"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"/>
	    
	</RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <!-- 导航栏 -->
    <LinearLayout
        android:id="@+id/topContactPlatformOne"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include layout="@layout/top_title" />
    </LinearLayout> 
	<TabHost
	    android:layout_below="@id/topContactPlatformOne"
	    android:id="@+id/topContactPlatformOneTabHost"
	    android:layout_width="match_parent"
	    android:layout_height="40dp" >
        
	    <LinearLayout 
	        android:id="@+id/contactPlatformOneLinearLayout"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal"
	        android:baselineAligned="false">
	         
	        <TabWidget
	        	android:layout_weight="0"
	            android:id="@android:id/tabs"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	        
	        <FrameLayout
	       		android:gravity="bottom"
	       		android:layout_weight="1"
	            android:id="@android:id/tabcontent"          
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:padding="0dp">
				<TextView android:id="@+id/contactPlatformOneView1" 
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"/>  
	            <TextView android:id="@+id/contactPlatformOneView2" 
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"/>  
	            <TextView android:id="@+id/contactPlatformOneView3" 
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"/>     
	        </FrameLayout>
	    </LinearLayout>
	    
    </TabHost>
    <LinearLayout 
        android:layout_below="@id/topContactPlatformOneTabHost"
        android:id="@+id/contactPlatformOneLineLayout"
        android:layout_marginLeft="8dp"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
   	<TextView 
   	    android:layout_marginTop="8dp"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:textSize="20sp"
   	    android:gravity="center"
   	    android:text="建议内容"/>
   	<EditText 
   	    android:layout_marginTop="8dp"
   	    android:id="@+id/contactPlatformOneSuggestEditText"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:textSize="14sp"
   	    android:padding="8dp"
   	    android:lines="4"
   	    android:gravity="top|left"
   	    android:hint="请填写您宝贵的意见建议"
   	    android:background="@drawable/comment_view_input_bg"/>
   	<Button 
   	    android:layout_marginTop="8dp"
   	    android:id="@+id/contactPlatformOneCommitButton"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:text="提交"/>
   	</LinearLayout>
   	
    <LinearLayout 
        android:layout_below="@id/topContactPlatformOneTabHost"
        android:id="@+id/mySuggestLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <ListView 
		    android:id="@+id/mySuggestListView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:divider="#ffdddddd"
		    android:dividerHeight="0.5dp">
			    
		</ListView>
    </LinearLayout>
	
    <LinearLayout 
        android:layout_below="@id/topContactPlatformOneTabHost"
        android:id="@+id/publicInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <ListView 
		    android:id="@+id/publicInfoListView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:divider="#ffdddddd"
		    android:dividerHeight="0.5dp">
			    
		</ListView>
    </LinearLayout>
	
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 导航栏 -->
    <LinearLayout
        android:id="@+id/topNewsContentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include layout="@layout/top_title" />
    </LinearLayout>
    <!-- 新闻内容显示5 -->
	<WebView 
	    android:layout_below="@id/topNewsContentLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/newsContentWebview"
	    android:layout_above="@+id/commentContentLinelayout"/>
	<!-- 评论项 -->
	<LinearLayout 
	    android:layout_above="@+id/gap"
	    android:id="@+id/commentContentLinelayout"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:background="@drawable/commentbackground"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/commentTextView"
	        android:layout_marginLeft="5dp"
	        android:layout_width="268dp"
	        android:layout_height="36dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical|left"
	        android:textSize="15sp"
	        android:padding="4dp"
	        android:background="@drawable/comment_view_input_bg"
	        android:hint="我来说两句..."/>
	    <LinearLayout 
	        android:layout_width="86dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/biz_news_detailpage_comment_normal"
	        >
	     <TextView 
	        android:id="@+id/commentCountTextView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="3dp"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:textColor="#ffffff"
	        android:textSize="14sp"
	        android:text="0评论"/>
	    </LinearLayout>
	</LinearLayout>
	<!-- 把下面的view注释掉，则发现btnPressed2Talk的marginBottom无效 -->  
    <View 	
        android:id="@+id/gap"
		android:layout_width="wrap_content"
		android:layout_height="0dip"
		android:layout_alignParentBottom="true"  
           />

</RelativeLayout>

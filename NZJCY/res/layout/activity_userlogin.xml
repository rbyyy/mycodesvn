<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!-- 导航栏 -->
    <LinearLayout
        android:id="@+id/topUserLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include layout="@layout/top_title" />
    </LinearLayout> 
	<TabHost
	    android:layout_below="@id/topUserLogin"
	    android:id="@+id/topUserLoginTabHost"
	    android:layout_width="match_parent"
	    android:layout_height="40dp" >
        
	    <LinearLayout 
	        android:id="@+id/userLoginUpLinearLayout"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal"
	        android:baselineAligned="false">
	         
	        <TabWidget
	        	android:layout_weight="0"
	            android:id="@android:id/tabs"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	        
	        <FrameLayout
	       		android:gravity="bottom"
	       		android:layout_weight="1"
	            android:id="@android:id/tabcontent"          
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:padding="0dp">
				<TextView android:id="@+id/userLoginView1" 
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"/>  
	            <TextView android:id="@+id/userLoginView2" 
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"/>      
	        </FrameLayout>
	    </LinearLayout>
	    
    </TabHost>
    <!-- 登录项 -->
	<LinearLayout 
	    android:layout_below="@id/topUserLoginTabHost"
        android:id="@+id/topUserLoginUpLinearLayout"
	    android:layout_marginLeft="8dp"
	    android:layout_width="344dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView 
	        android:layout_marginTop="8dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="登录"/>
	    <EditText 
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginUpUserNameEditText"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="用户名 *"
    	    android:textSize="14sp"
    	    android:padding="8dp"
    	    android:singleLine="true"
    	    android:background="@drawable/comment_view_input_bg"/>
		<EditText 
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginUpPasswordEditText"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:inputType="textPassword"
    	    android:hint="登陆密码 *"
    	    android:textSize="14sp"
    	    android:padding="8dp"
    	    android:singleLine="true"
    	    android:background="@drawable/comment_view_input_bg"/>
	    <Button
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginUpButton"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="登陆"></Button>
	</LinearLayout>
	
	<!-- 注册项 -->
	<LinearLayout 
	    android:layout_below="@id/topUserLoginTabHost"
        android:id="@+id/topUserLoginInLinearLayout"
	    android:layout_marginLeft="8dp"
	    android:layout_width="344dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:visibility="invisible">
	    <TextView 
	        android:layout_marginTop="8dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="注册"/>
	    <EditText 
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginInUserNameEditText"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="用户名 *"
    	    android:textSize="14sp"
    	    android:padding="8dp"
    	    android:singleLine="true"
    	    android:background="@drawable/comment_view_input_bg"/>
		<EditText 
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginInPasswordEditText"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:inputType="textPassword"
    	    android:hint="登陆密码 *"
    	    android:textSize="14sp"
    	    android:padding="8dp"
    	    android:singleLine="true"
    	    android:background="@drawable/comment_view_input_bg"/>
		<EditText 
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginInConfirmPasswordEditText"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:inputType="textPassword"
    	    android:hint="确认登陆密码 *"
    	    android:textSize="14sp"
    	    android:padding="8dp"
    	    android:singleLine="true"
    	    android:background="@drawable/comment_view_input_bg"/>
	    <Button
    	    android:layout_marginTop="8dp"
    	    android:id="@+id/userLoginInButton"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="注册"></Button>
	</LinearLayout>
	
</RelativeLayout>

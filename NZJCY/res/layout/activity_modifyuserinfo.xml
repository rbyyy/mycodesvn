<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 导航栏 -->
    <include layout="@layout/top_title" />
    <LinearLayout 
	        android:layout_marginLeft="8dp"
	        android:layout_width="344dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	    <EditText 
	        android:id="@+id/modifyPasswordEditText"
	        android:layout_marginTop="8dp"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:hint="登陆密码"
	   	    android:textSize="14sp"
	   	    android:padding="8dp"
	   	    android:singleLine="true"
	   	    android:inputType="textPassword"
	   	    android:background="@drawable/comment_view_input_bg"/>
	    <TextView 
	    	    android:layout_marginTop="8dp"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:textSize="14sp"
	    	    android:padding="8dp"
	    	    android:text="不修改则留空"/>
	    <EditText 
	    	    android:layout_marginTop="8dp"
	    	    android:id="@+id/userInfoNameEditText"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:hint="姓名"
	    	    android:textSize="14sp"
	    	    android:padding="8dp"
	    	    android:singleLine="true"
	    	    android:background="@drawable/comment_view_input_bg"/>
	    <EditText 
	    	    android:layout_marginTop="8dp"
	    	    android:id="@+id/userInfoPhoneEditText"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:hint="手机"
	    	    android:textSize="14sp"
	    	    android:padding="8dp"
	    	    android:singleLine="true"
	    	    android:inputType="phone"
	    	    android:background="@drawable/comment_view_input_bg"/>
	    <EditText 
	    	    android:layout_marginTop="8dp"
	    	    android:id="@+id/userInfoTelEditText"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:hint="固话"
	    	    android:textSize="14sp"
	    	    android:padding="8dp"
	    	    android:singleLine="true"
	    	    android:inputType="phone"
	    	    android:background="@drawable/comment_view_input_bg"/>
	    <EditText 
	    	    android:layout_marginTop="8dp"
	    	    android:id="@+id/userInfoEmailEditText"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:hint="电子邮箱"
	    	    android:textSize="14sp"
	    	    android:padding="8dp"
	    	    android:singleLine="true"
	    	    android:inputType="textEmailAddress"
	    	    android:background="@drawable/comment_view_input_bg"/>
	    <Button
	    	    android:layout_marginTop="8dp"
	    	    android:id="@+id/modifyUserInfoButton"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:text="修改"></Button>
	</LinearLayout>

</LinearLayout>

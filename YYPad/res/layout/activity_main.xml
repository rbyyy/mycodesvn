                    	android:textColor="#ffffff"
                    	android:textSize="23sp"
                    	android:text="整机专区"
                    	android:gravity="center"/>
                </RelativeLayout>
            </FrameLayout>
        </TableRow>
<!-- 精品展示 -->
        <TableRow
            android:layout_width="313dp"
            android:layout_height="352dp" >
            <FrameLayout 
                android:layout_width="313dp"
                android:layout_height="352dp"
                >
                <ImageButton 
                    android:id="@+id/boutiqueButton"
			    	android:contentDescription="@string/image_button_desc"
                	android:layout_width="313dp"
                	android:layout_height="352dp"/>
<!--                 android:background="@drawable/mainpagefive" -->
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    >
                    <ImageView 
                    	android:contentDescription="@string/imageview_desc"
                    	android:layout_width="177dp"
                    	android:layout_height="59dp"
                    	android:background="@drawable/menutitle"

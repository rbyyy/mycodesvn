<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/title_bg_blue"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/ivTitleBtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dip"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="15dip"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:src="@drawable/reg_5" />
    
    <LinearLayout
        android:id="@+id/ivTitleMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivTitleBtnLeft"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/top_title_img" />
    </LinearLayout>

    <FrameLayout 
        android:layout_toLeftOf="@+id/share_btn"
        android:id="@+id/ivTitleFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">
        
        <ImageView 
	        android:id="@+id/ivTitleBtnThree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/biz_news_detailpage_comment_normal"
	        android:contentDescription="@string/app_name"/>
        
        <TextView 
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivTitleFour"
            android:text="0跟帖"
            android:textColor="#0092e2"/>
        
    </FrameLayout>
    
    
    
    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dip"
        android:contentDescription="@null"
        android:gravity="center"
        android:includeFontPadding="false"
        android:src="@drawable/share_btn"
        android:visibility="invisible" />
    

</RelativeLayout>
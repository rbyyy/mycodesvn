<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/screenbg">

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="混凝土温度无线采集预警系统2.0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>
    
    <LinearLayout 
	    android:id="@+id/LinearLayout00"
	    android:layout_marginTop="5dp"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content">
		
		<TextView
		    android:id="@+id/TextView00"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.20"
		    android:gravity="right"
		    android:text="推送识别码:"
		    android:textSize="15sp" >
		    
		</TextView>
		
		<TextView
		    android:id="@+id/TextView001"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="4"
		    android:gravity="left"
		    android:textSize="15sp" >
		    
		</TextView>

	</LinearLayout>
    
	<LinearLayout 
	    android:id="@+id/LinearLayout01"
	    android:layout_marginTop="5dp"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content">
		
		<TextView
		    android:id="@+id/TextView01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.25"
		    android:gravity="right"
		    android:text="手机蓝牙开关:"
		    android:textSize="15sp" >
		    
		</TextView>
		
		<ToggleButton
		    android:id="@+id/tbtnSwitch"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#53a8f8"
		    android:textColor="#FFFFFF" >
		    
		</ToggleButton>
		
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"/>
		
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_marginTop="5dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.30"
	        android:gravity="right"
	        android:text="服务器地址:"
	        android:textSize="15sp" />
	    
	    <EditText 
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:id="@+id/severAddEditText"
	        android:inputType="text"
	        android:background="@drawable/edittext_style"
	        android:layout_weight="3"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"/>
	    
	</LinearLayout>

	<LinearLayout 
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <TextView 
			    android:layout_marginTop="10dp"
			    android:layout_width="220dp"
			    android:layout_height="wrap_content"
			    android:text="温度计设备列表"
			    android:textColor="#000000"
			    android:textSize="18sp"
			    android:gravity="center"/>
	        
	        <ListView
			    android:id="@+id/lvDevices"
			    android:layout_width="220dp"
			    android:layout_height="360dp"
			    android:layout_marginTop="10dp"
			    android:background="@drawable/tempdevicelist_bordercolor" >
			</ListView>
	        
	    </LinearLayout>
    	
	    
	    <LinearLayout 
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <Button
	            android:layout_marginTop="80dp" 
	    		android:id="@+id/btnSearch"
	    		android:layout_width="120dip"
	    		android:layout_height="wrap_content"
	    		android:background="@drawable/bluetoothbtn_press"
	    		android:text="搜索设备"
	    		android:textColor="#FFFFFF" />
	        
	        <Button 
	            android:layout_marginTop="20dp" 
	            android:id="@+id/btnConfirm"
	            android:layout_width="120dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bluetoothbtn_press"
	            android:text="温度报警记录"
	            android:textColor="#FFFFFF"/>
	        
	        <Button 
	            android:layout_marginTop="20dp" 
			    android:layout_height="wrap_content" 
			    android:id="@+id/btnExit"
			    android:background="@drawable/bluetoothbtn_press"
				android:text="关于" 
				android:layout_width="120dip"
				android:textColor="#FFFFFF" />
	        
	    </LinearLayout>
		
	</LinearLayout>
	
</LinearLayout>

